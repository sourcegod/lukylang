print "Bitwise OR: ";
print "0 | 0 = " + 0 | 0;
print "1 | 0 = " + 1 | 0;
print "0 | 1 = " + 0 | 1;
print "1 | 1 = " + 1 | 1;
print "";

print "Bitwise AND: ";
print "0 & 0 = " + 0 & 0;
print "0 & 1 = " + 0 & 1;
print "1 & 0 = " + 1 & 0;
print "1 & 1 = " + 1 & 1;
print "";

print "Bitwise XOR: ";
print "0 ^ 0 = " + 0 ^ 0;
print "0 ^ 1 = " + 0 ^ 1;
print "1 ^ 0 = " + 1 ^ 0;
print "1 ^ 1 = " + 1 ^ 1;
print "";

print "Bitwise NOT: ";
print "~0 = " + ~0;
print "~1 = " + ~1;
print "~42 = " + ~42;

